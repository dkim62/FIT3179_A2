{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Median house price per suburb (2010-2020)",
    "width": 800,
    "height": 500,
    "params": [
        {
            "name": "zoom_level",
            "value": 900,
            "bind": {
                "input": "range",
                "min": 900, 
                "max": 2000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [135, -27],
            "bind": {
                "input": "select",
                "options": [
                    [144, -96],
                    [132, -19.5],
                    [136, -30],
                    [117, -25],
                    [142,-20.9  ],
                    [145,-31.8]
                ],
                "labels": ["Victoria", "Northern Territory", "South Australia", "Western Australia","Queensland", "New South Wales"],
                "name": "Map Centre: "
            }
        },
        {
            "name": "Year_selection",
            "value": 2021,
            "bind": {"input": "range", "min": 2017, "max": 2021, "step": 1}
        }
    ],
    "projection": {
        "type": "equirectangular",
        "center": { "expr": "center_to" },
        "scale": { "expr": "zoom_level" }
    },
    "layer" : [ {
        "data": {
            "url": "https://raw.githubusercontent.com/dkim62/FIT3179_A2/main/js/LGA_2017_AUST.json",
            "format": { "type": "topojson", "feature": "LGA_2017_AUST" }
          },
          "transform": [
            {
              "lookup": "properties.LGA_NAME17",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/dkim62/FIT3179_A2/main/Data/Crash_Data.csv"
                },
                "key": "National LGA Name 2017"
              },
              "as" : "map"
            }
          ],
          "mark": {"type": "geoshape", "fill" : "lightgray"},
          "encoding": {
            "tooltip": [
              {"field": "properties.LGA_NAME17", "type": "nominal"}   
            ]
          }
        },{
            "data": {
                "url": "https://raw.githubusercontent.com/dkim62/FIT3179_A2/main/Data/Crash_Data.csv"
            },
            "transform": [
                {
                    "lookup": "National LGA Name 2017",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/dkim62/FIT3179_A2/main/js/LGA_2017_AUST.json",
                            "format": { "type": "topojson", "feature": "LGA_2017_AUST" }
                        },
                    "key": "properties.LGA_NAME17"
                    },
                    "as" : "geo"
                },
                {"filter" : "datum.Year == Year_selection"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "encoding": {
                "shape" : {
                    "field" : "geo",
                    "type" : "geojson"
                },
                "color" : {
                    "aggregate" : "count",
                    "field" : "National LGA Name 2017",
                    "type" : "quantitative",
                    "title" : "count"
                },
                "tooltip": [
                    { "field": "National LGA Name 2017", "type" : "nominal" }
            ]
            }
        }
    ]
    
}