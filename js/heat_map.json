{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Crash Case Reported in Australia",
  "width" : 800,
  "height" : 500,
  "padding" : 10,
  "params": [
    {
      "name": "Year_selection",
      "value": 2021,
      "bind": {"input": "range", "min": 2017, "max": 2021, "step": 1}
   }
  ],
  "data": { "url": "Data/Crash_Data.csv"},
  "transform": [
    {"filter" : "datum.Year == Year_selection"}
  ],
  "layer" : [
    {
      "mark" : "rect",
      "encoding" : {
        "x" : {"field" : "Time", "type" : "ordinal"}, 
        "y" : {"field" : "Month", "type" : "ordinal", "timeUnit" : "month"},
        "color" : {
          "aggregate" : "count"
        }   
      }
    }          
  ]
}