{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title" : { "text" : "When Does Accident Happen?", "align" : "center", "fontSize" : 30, "fontWeight" : "bold", "offset" : 20},
  "width" : 800,
  "height" : 450,
  "background" : "rgb(240,240,240)",
  "params": [
    {
      "name": "State_selection",
      "value": "Vic",
      "bind": {
        "input": "select",
        "options": [
            "Vic",
            "NT",
            "SA",
            "WA",
            "Qld",
            "NSW"
        ],
        "labels": ["Victoria", "Northern Territory", "South Australia", "Western Australia","Queensland", "New South Wales"],
        "name" : "State: "
      }
    }
  ],
  "data": { "url": "https://raw.githubusercontent.com/dkim62/FIT3179_A2/main/Data/Crash_Data.csv"},
  "transform": [
    {"filter" : "datum.State == State_selection"}
  ],
  "mark" : "rect",
  "encoding" : {
    "x" : {
      "field" : "Time", "type" : "ordinal", 
      "sort" : ["0:00", "1:00","2:00","3:00","4:00","5:00","6:00","7:00","8:00","9:00","10:00","11:00","12:00","13:00","14:00","15:00","16:00","17:00","18:00","19:00","20:00","21:00","22:00","23:00"]}, 
    "y" : {"field" : "Month", "type" : "ordinal", "timeUnit" : "month"},
    "color" : {
      "aggregate" : "count",
      "scale" : {"range" : ["rgb(255,255,255)","rgb(189,194,208)","rgb(84,98,135)","rgb(38,56,104)"]}
    }   
  }
}
